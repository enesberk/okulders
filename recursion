/*   10.soru
int toplam(int n)
{
	int i, sum = 1;
	for (i = 2; i <= n; i++)
		sum = sum * (i - 1) + i;                   // 1 * (2-1) + 2 = 3 // 3*(3-1) + 3 = 9 // 9
	return sum;
}
int F(int n)
{
	if (n>=2)
		return n + F(n - 1) * (n - 1);
	return 1;
}

int main() {
