/*   6.soru
int sum(int n) {
	int i, sp = 1, sc = 1, sn = 1; 
	for (i = 1; i <= n; i++) {
		sn = i + sp + sc;						// 1+1+1 = 3 sc = 3  // 2+1+3 = 6 sp = 3 sc = 6 // 3+3+6= 12 sp = 6 sc = 12 // 4+6+12
		sp = sc;
		sc = sn;
	} 
	return sn;
}
int F(int n) {
	if (n >= 1)
		return n + F(n - 1) + F(n - 2);     // n= 3 ; 3+f(n-1)+f(n-2) n=2 
	return 1;
}
int main() {
	int n;
	printf("n: ");
	scanf("%d", &n);
	printf("%d", F(n));
	puts("");
	puts("");
	puts("");
	puts("");
