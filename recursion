int fnk(int n) {
	int i, sum = 1; 
	for (i = 1; i <= n; i++) 
		sum += (i - 1)*(i + 1); //0 + 1 = 1 , 3 + 1 = 4, 8+4 = 12 
	return sum;
}

int F(int n){
	int i=0;
	if (n>=1)
	{
		i++;
		return F(n-i)+(i - 1)*(i + 1);
	}

	return 1;


}
int main() {
	int n;
	printf("n: ");
	scanf("%d", &n);
	printf("%d", F(n));
	puts("");
	puts("");
	puts("");
	puts("");
	printf("%d",fnk(n));
}
