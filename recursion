/*  9.soru 
//bu soru tam deÄŸil.
int faktoriyel(int x) {
	if (x>=1)
		return x * faktoriyel(x - 1);
	return 1;
}
float Fa(float x, float n) {
	float k=1;
	for (int i = 1; i <= n; i++)
	{
		k +=  pow(-1, n) * pow(x, 2 * n + 1) / faktoriyel((2 * n + 1));
	} 
	return k;	
}

float F(float x, float n) {
	if (n >= 1)
		return pow(-1, n) * pow(x, 2 * n + 1) / (float)(faktoriyel(2 * n + 1)) + F(x, n-1);
	return 0;
}
int main() {
	float x, n;
	printf("x: ");
	scanf("%f", &x);
	printf("n: ");
	scanf("%f", &n);
	printf("%f", Fa(x, n));
